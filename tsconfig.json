{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "paths": {
      "*": [
        "node_modules/*",
      ]
    },
    "noImplicitAny": false,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}